<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSkor"
        android:layout_width="98dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="Skor: 0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtZaman" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="364dp"
        android:layout_height="451dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/bugsbunny" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/bugsbunny" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/txtZaman"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="501dp"
        android:text="Zaman: 10"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtSkor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>